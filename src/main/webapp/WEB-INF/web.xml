<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>MySqlDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/jsp_server</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlOpt1</param-name>
        <param-value>useUnicode=true</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlOpt2</param-name>
        <param-value>characterEncoding=UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlOpt3</param-name>
        <param-value>serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlUserID</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>MySqlPW</param-name>
        <param-value>full505</param-value>
    </context-param>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>